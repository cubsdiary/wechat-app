<view class="user-phone">
  <view class="user-title">登录</view>
  <view class="form">
    <view class="number-input">
      <input class="input" type="number" value="{{inputValue}}" placeholder="请输入手机号码" placeholder-class="placeholder" maxlength="11" focus="{{focus}}" bindinput="getValue"/>
      <view class="reset" wx:if="{{resetBtn}}" capture-catch:tap="clearValue"><icon type="clear" size="20" color="#999999"/></view>
    </view>
    <view class="{{submitBtn ? 'submit' : 'submit disable'}}" bindtap="goLogin">获取验证码</view>
  </view>
</view>