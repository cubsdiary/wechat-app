.user-phone{
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #f2f2f2;
  padding-top: 75rpx;
}
.user-title{
  height: 214rpx;
  line-height: 214rpx;
  text-align: center;
  font-size: 36rpx;
  color: #000000;
}
.form{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.number-input{
  position: relative;
  height: 112rpx;
  display: flex;
  background-color: #fff;
  margin-bottom: 30rpx;
  -webkit-box-shadow:0 0 10rpx rgba(0,0,0,0.1);
  -moz-box-shadow:0 0 10rpx rgba(0,0,0,0.1);
  box-shadow:0 0 10rpx rgba(0,0,0,0.1);
}
.number-input .input{
  box-sizing: border-box;
  width: 630rpx;
  height: 112rpx;
  padding: 0rpx 30rpx;
}
.number-input .placeholder{
  font-size: 30rpx;
  color: #999;
}
.number-input .reset{
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 11rpx;
}
.submit{
  width: 710rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #4a4c5b;
  font-size: 30rpx;
  color: #fff;
  margin: 0 auto;
  border-radius: 5rpx;
  text-align: center;
}
.submit.disable{
  background-color: #999;
} 