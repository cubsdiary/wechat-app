.jackpot-luck{
  flex: 1;
  display: flex;
  background-color: #f2f2f2;
  overflow: hidden;
}
.scroll-view{
  margin-top: 10rpx;
  flex: 1;
  background-color: #fff;
}
.first-prize {
  width: 100%;
  height: 436rpx;
  padding-top: 52rpx;
}
.first-prize .first-info{
  width: 321rpx;
  height: 100%;
  margin: 0 auto;
}
.first-prize .first-prize-img{
  width: 100%;
  height: 234rpx;
  position: relative;
  margin-bottom: 10rpx;
}
.first-prize .img {
  width: 217rpx;
  height: 140rpx;
  margin-top: 18rpx;
  margin-left: 54rpx;
}
.first-prize .bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 321rpx;
  height: 234rpx;
  background-image: url('https://cdn.cubsdiary.com/images/wechat/first-prize.png');
  background-position: center center;
  background-size: 321rpx 234rpx;
  background-repeat: no-repeat;
}
.first-prize .first-prize-title{
  width: 100%;
  min-height: 38rpx;
  font-size: 26rpx;
  text-align: center;
  color: #606060;
  line-height: 38rpx; 
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.first-prize .first-prize-info{
  width: 100%;
  height: 36rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ef7179;
}
.prize-class{
  display: flex;
  justify-content: space-between;
  width:  100%;
  height: 350rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.prize-class .second-prize, .prize-class .three-prize{
  width: 320rpx;
}
.prize-class .second-prize-img, .prize-class .three-prize-img{
  width: 100%;
  height: 194rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.prize-class .second-prize-img .img, .prize-class .three-prize-img .img{
  width: 217rpx;
  height: 142rpx;
  margin-top: 17rpx;
  margin-left: 51rpx;
}
.prize-class .second-prize-img .bg{
  position: absolute;
  left: 37rpx;
  top: 0rpx;
  width: 247rpx;
  height: 193rpx;
  background-image: url('https://cdn.cubsdiary.com/images/wechat/second-prize.png');
  background-position: center center;
  background-size: 247rpx 193rpx;
  background-repeat: no-repeat;
}
.prize-class .three-prize-img .bg{
  position: absolute;
  left: 49rpx;
  top: 0rpx;
  width: 221rpx;
  height: 193rpx;
  background-image: url('https://cdn.cubsdiary.com/images/wechat/three-prize.png');
  background-position: center center;
  background-size: 221rpx 193rpx;
  background-repeat: no-repeat;
}
.prize-class .second-prize-title, .prize-class .three-prize-title{
  width: 100%;
  min-height: 38rpx;
  font-size: 26rpx;
  text-align: center;
  color: #606060;
  line-height: 38rpx; 
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.prize-class .three-prize-info, .prize-class .second-prize-info{
  width: 100%;
  height: 36rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ef7179;
}
.prize-other{
  width:  100%;
  overflow: hidden;
}
.prize-other .title{
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 58rpx;
}
.prize-other .title .left-bor, .prize-other .title .right-bor{
  width: 235rpx;
  height: 17rpx;
  border-bottom: 2rpx solid #d2d2d2;
}
.prize-other .title .text{
  width: 145rpx;
  height: 100%;
  font-size: 24rpx;
  color: #606060;
  line-height: 36rpx;
  text-align: center
}
.prize-other .jackpot-list{
  display: inline-block;
  width: 320rpx;
  height: 300rpx;
  overflow: flow;
}
.prize-other .jackpot-list.bor-left{
  margin: 0rpx 25rpx 0rpx 30rpx;
}
.prize-other .jackpot-list.bor-right{
  margin: 0rpx 30rpx 0rpx 25rpx;
}
.jackpot-list .jackpot-img{
  display: block;
  width: 210rpx;
  height: 135rpx;
  margin: 0 auto;
}
.jackpot-list .jackpot-title{
  margin-top: 34rpx;
  width: 100%;
  min-height: 38rpx;
  font-size: 26rpx;
  text-align: center;
  color: #606060;
  line-height: 38rpx; 
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.jackpot-list .jackpot-info{
  width: 100%;
  height: 36rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ef7179;
}