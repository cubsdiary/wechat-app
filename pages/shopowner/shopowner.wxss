/* pages/shopowner/shopowner.wxss */
.shopowner-bg{
  flex: 1;
  background: #f2f2f2;
  margin-top: 12rpx;
}
.shop-accout{
  margin-top: 12rpx;
  box-sizing: border-box;
  width: 100%;
  height: 160rpx;
  background-color: #fff;
  padding: 20rpx 30rpx 16rpx 30rpx;
}
.shop-accout .shop-name, .shop-accout .shop-tell{
  display: flex;
  align-items: center;
  width: 100%;
  height: 62rpx;
  font-size: 26rpx;
  color: #4a4a4a;
  line-height: 62rpx;
}
.shop-accout .shop-name .txt{
  width: 165rpx;
}
.shop-accout .shop-tell .txt{
  width: 165rpx;
}
.shop-accout .shop-tell .info{
  flex: 1;
} 
.shop-accout .shop-tell .btn{
  width: 140rpx;
  height: 46rpx;
  border-radius: 46rpx;
  background-color: #4e4e4e;
  line-height: 46rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}
.shop-info{
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  padding: 24rpx 30rpx 0rpx 30rpx;
  background-image: url('https://cdn.cubsdiary.com/images/wechat/shop-bg.png');
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 750rpx 100rpx;
  margin-bottom: 10rpx;
}
.shop-info .box{
  display: flex;
  width: 100%;
  height: 20rpx;
  margin-bottom: 10rpx;
}
.shop-info .title{
  font-size: 20rpx;
  color: #fff;
  line-height: 20rpx;
}
.shop-info .nums{
  font-size: 30rpx;
  color: #fff;
  line-height: 30rpx;
}
.shop-info .box .txt-1{
  width: 187rpx;
}
.shop-info .box .txt-2{
  width: 223rpx;
}
.shop-info .box .txt-3{
  flex: 1;
}
.shop-btns{
  box-sizing: border-box;
  width: 100%;
  height: 380rpx;
  padding: 0 30rpx;
  background-color: #FFF;
}
.shop-btns .btn{
  box-sizing: border-box;
  display: inline-block;
  width: 230rpx;
  height: 200rpx;
  padding-top: 140rpx;
  text-align: center;
}
.shop-btns .qr-code{
  background-image: url('https://cdn.cubsdiary.com/images/wechat/qr-code.png');
  background-repeat: no-repeat;
  background-position: center 40rpx;
  background-size: 74rpx 74rpx;
}
.shop-btns .write-off-code{
  background-image: url('https://cdn.cubsdiary.com/images/wechat/write-off-code.png');
  background-repeat: no-repeat;
  background-position: center 40rpx;
  background-size: 70rpx 78rpx;
}
.shop-btns .btn .txt{
  font-size: 24rpx;
  color: #808080;
}