.map{
  position: relative;
  flex: 1;
  display: flex;
  align-items: flex-end;
}
#myMap {
  width: 100%;
  height: 100%;
}
.map-btn{
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 30rpx;
  bottom: 270rpx;
  width: 65rpx;
  height: 175rpx;
  background-color: #fff;
  border-radius: 65rpx 65rpx 65rpx 65rpx;
  z-index: 100;
}
.map-location{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.loc-img {
  width: 30rpx;
  height: 30rpx;
}
.bor {
  height: 1rpx;
  width: 48rpx;
  margin: 0 auto;
  background-color: #d7d7d7;
}
.map-kf{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.kf-img {
  width: 30rpx;
  height: 33rpx;
}
.store-info {
  position: fixed;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 250rpx;
  padding: 0 15rpx;
  opacity: 1;
}
.store-info .con {
  height: 220rpx;
  border-radius: 8rpx;
  background-color: #fff;
  display: flex;
  overflow: hidden;
}
.store-info .con .left{
  width: 50rpx;
  display: flex;
  background-color: #97cb9c;
  justify-content: center;
  align-items: center;
}
.store-info .con .left .leftimg {
  width: 20rpx;
  height: 20rpx;
}
.store-info .con .right{
  flex: 1;
  padding: 25rpx 0rpx 25rpx 20rpx;
  display: flex;
}
.store-info .con .bor{
  width: 2rpx;
  height: 100%;
  background-color: #ddd;
}
.store-info .con .center{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.store-info .con .center .h2{
  height: 76rpx;
  line-height: 76rpx;
  font-size: 30rpx;
  color: #424242;
  font-weight: bold;
}
.store-info .con .center .p{
  height: 24rpx;
  width: 430rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 24rpx;
  font-size: 22rpx;
  color: #666;
}
.store-info .con .way{
  box-sizing: border-box;
  width: 170rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
}
.store-info .con .way .p{
  font-size: 26rpx;
  color: #ff6f6f;
  font-weight: bold;
}
.store-info .con .way .wayimg{
  width: 46rpx;
  height: 46rpx;
  margin-bottom: 14rpx;
}