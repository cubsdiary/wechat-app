.home{
  flex: 1;
  background: #f2f2f2;
  display: flex;
  flex-direction: column;
  padding-top: 25rpx;
  background-image: url('https://cdn.cubsdiary.com/images/wechat/homebg.png');
  background-repeat: no-repeat;
  background-size: 100% auto;
}
.active-list{
  flex: 1;
  padding: 0 15rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.list{
  overflow: hidden;
}
.active{
  box-sizing: border-box;
  height: 436rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  background: #fff;
  border-radius: 10rpx;
}
.img {
  height: 270rpx;
  margin-bottom: 25rpx;
}
.name{
  line-height: 36rpx;
  font-size: 28rpx;
  color: #555555;
  font-weight: bold;
} 
.time{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #ff7575;
  text-align: right;
}
.bar{
  height: 76rpx;
  display: flex;
  margin-top: 1rpx;
  background-color: rgba(255, 255, 255, .8);
  padding: 0rpx 30rpx;
  border-radius: 10rpx;
}
.hot{
  flex: 1;
  background-image: url('https://cdn.cubsdiary.com/images/wechat/hot.png');
  background-position: left center;
  background-repeat: no-repeat;
  background-size: 33rpx 35rpx;
  padding-left: 50rpx;
  font-size: 24rpx;
  line-height: 76rpx;
  color: #ff6e51;
  font-weight: 600;
}
.share{
  box-sizing: border-box;
  width: 100rpx;
  background-image: url('https://cdn.cubsdiary.com/images/wechat/share.png');
  background-position: left center;
  background-repeat: no-repeat;
  background-size: 39rpx 39rpx;
  padding-left: 50rpx;
  font-size: 24rpx;
  line-height: 76rpx;
  color: #ff6e51;
  font-weight: 600;
}