.share-mask{
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  bottom: 0rpx;
  margin: auto;
  width: 630rpx;
  height: 480rpx;
  background: #fff;
  border-radius: 10rpx;
}
.share-mask .share-icon{
  width: 100%;
  height: 200rpx;
  margin-bottom: 20rpx;
  background-image: url('https://cdn.cubsdiary.com/images/wechat/share-bg.png');
  background-repeat: no-repeat;
  background-position: center bottom;
  background-size: 144rpx 144rpx;
}
.share-mask .text1{
  display: block;
  width: 100%;
  height: 52rpx;
  font-size: 30rpx;
  color: #5c5c5c;
  line-height: 52rpx;
  text-align: center;
}
.share-mask .share-btn{
  width: 287rpx;
  height: 56rpx;
  font-size: 30rpx;
  color: #ffffff;
  text-align: center;
  line-height: 30rpx;
  margin: 0 auto;
  margin-top: 37rpx;
  background-image: url('https://cdn.cubsdiary.com/images/wechat/jacktop-btn.png');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 287rpx 56rpx;
}